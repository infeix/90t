<%= form_with(model: reminder, local: true) do |form| %>
  <% if reminder.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(reminder.errors.count, "error") %> prohibited this reminder from being saved:</h2>

      <ul>
      <% reminder.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label t('name') %>
    <%= form.text_field :name, id: :reminder_name %>
  </div>

  <div class="field">
    <%= form.label t('.refresh_rate') %>
    <%= form.number_field :refresh_rate, id: :reminder_refresh_rate %>
    <%= select_tag :reminder_refresh_rate_unit, options_for_select(Reminder::UNITS, Reminder::UNITS.first), name: 'reminder[refresh_rate_unit]' %>
  </div>

  <div class="field">
    <%= form.label t('refreshed_at') %>
    <%= form.date_select :refreshed_at, id: :reminder_refreshed_at %>
  </div>

  <div class="actions">
    <%= form.submit t('.save') %>
  </div>
<% end %>
