<h1>Reminder for Refreshing</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Refreshed at</th>
      <th>Required in</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reminders.each do |reminder| %>
      <tr>
        <td><%= reminder.name %></td>
        <td><%= reminder.refreshed_at.strftime('%d.%m.%Y') %></td>
        <td><%= "#{reminder.required_in_days} Days" %></td>
        <td><%= link_to 'Refresh today', refresh_reminder_path(reminder), method: :post %></td>
        <td><%= link_to 'Edit', edit_reminder_path(reminder) %></td>
        <td><%= link_to 'Destroy', reminder, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Reminder', new_reminder_path %>

<hr>

<%= link_to destroy_user_session_path, class: 'user--logout--button', 'data-method' => 'delete', role: 'button' do %>
  LogOut
<% end %>
