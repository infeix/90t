<h1>Reminders</h1>

<table>
  <thead>
    <tr>
      <th><%= t('.name') %></th>
      <th><%= t('.refreshed_at') %></th>
      <th><%= t('.required_in') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reminders.each do |reminder| %>
      <tr>
        <td><%= reminder.name %></td>
        <td><%= reminder.refreshed_at.strftime('%d.%m.%Y') %></td>
        <% if reminder.required_in_days > 0 %>
          <td><%= "#{reminder.required_in_days} #{t('.days', count: reminder.required_in_days)}" %></td>
        <% else %>
          <td><%= "abgelaufen" %></td>
        <% end %>
        <td><%= link_to t('.refresh'), refresh_reminder_path(reminder), method: :post %></td>
        <td><%= link_to t('.edit'), edit_reminder_path(reminder) %></td>
        <td><%= link_to t('.destroy'), reminder, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('.new_reminder'), new_reminder_path %>

<hr>

